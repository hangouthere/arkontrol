{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmit": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "paths": {
      "*": ["*", "src/*"]
    },
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext",
    "traceResolution": false
  },
  "exclude": ["**/*.test.ts", "**/__mocks__/**"],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
